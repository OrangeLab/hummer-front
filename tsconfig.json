{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "dist",
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": false,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "paths": {
    },
    "declaration": true,
    "declarationDir": "dist/@types",
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./src",
  ]
}
